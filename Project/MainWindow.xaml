<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lvSongs">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Author}" Header="Author" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Title" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding IsFavourite}" Header="Favourite" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Save" Click="Button_Click_Save" Width="50"/>
            <Button Content="Add" Click="Button_Click_Add" Width="50"/>
            <Button Content="Edit" Click="Button_Click_Edit" Width="50"/>
            <Button Content="Delete" Click="Button_Click_Delete" Width="50"/>
        </StackPanel>
    </Grid>
</Window>
